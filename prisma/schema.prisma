generator client {
  provider = "prisma-client-js"
}

// prisma/schema.prisma
datasource db {
  provider  = "postgresql"
  url  	    = env("DATABASE_URL")
  // uncomment next line if you use Prisma <5.10
  // directUrl = env("DATABASE_URL_UNPOOLED")
}

enum UrlType {
  Facebook
  Instagram
  Deviantart
  X
}

enum UserRole {
  ADMIN
  USER
}

enum ArtStatus {
  Publish
  Private
}

model User {
  id            String          @id @default(cuid())
  name          String?
  email         String          @unique
  headline      String?
  password      String?
  emailVerified DateTime?
  image         String?
  followCount   Int @default(0)
  role          UserRole @default(USER)
  accounts      Account[]
  aerwork       Artwork[]
  social        Social[]
  comment       Comment[]
  like          Like[]
  followers   Follow[] @relation("UserFollowers")
  following   Follow[] @relation("UserFollowing")
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model Account {
  userId            String
  type              String
  provider          String
  providerAccountId String
  refresh_token     String?
  access_token      String?
  expires_at        Int?
  token_type        String?
  scope             String?
  id_token          String?
  session_state     String?
 
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
 
  user User @relation(fields: [userId], references: [id], onDelete: Cascade)
 
  @@id([provider, providerAccountId])
}

model Artwork {
  id            String          @id @default(cuid())
  userId        String
  title         String
  description   String?
  image         String
  status        ArtStatus @default(Private)
  createdAt     DateTime @default(now())
  updatedAt     DateTime @updatedAt
  software      String[]
  tags          String[]
  likeCount   Int       @default(0)
  comment       Comment[]
  like          Like[]

  user User @relation(fields: [userId], references: [id])
}

model Like {
  id        String   @id @default(cuid())
  userId    String
  artworkId String
  createdAt DateTime @default(now())

  user    User    @relation(fields: [userId], references: [id], onDelete: Cascade)
  artwork Artwork @relation(fields: [artworkId], references: [id], onDelete: Cascade)

  @@unique([userId, artworkId]) // ป้องกันการไลค์ซ้ำโดยผู้ใช้คนเดียวกัน
}

model Follow {
  id          String   @id @default(cuid())
  followerId  String   // User who is following
  followingId String   // User who is being followed
  createdAt   DateTime @default(now())

  follower    User     @relation("UserFollowers", fields: [followerId], references: [id])
  following   User     @relation("UserFollowing", fields: [followingId], references: [id])

  @@unique([followerId, followingId])
}

model Comment {
  id            String          @id @default(cuid())
  artId         String
  userId        String
  comment       String?
  reply         String?
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  artWork Artwork @relation(fields: [artId], references: [id])
  user User @relation(fields: [userId], references: [id])
}

model Social {
    id            String          @id @default(cuid())
    userId        String
    link          String?
    type          UrlType

    user User @relation(fields: [userId], references: [id])
}